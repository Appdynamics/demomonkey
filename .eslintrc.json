{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "extends": [
	"standard",
	"plugin:react/recommended",
	"plugin:import/errors",
	"plugin:import/warnings"
    ],
    "plugins": [
        "standard",
        "promise",
        "json",
        "react",
	"import"
    ],
    "rules": {
        "react/jsx-uses-vars": 1,
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "ignore",
            "asyncArrow": "ignore"
        }]
    }
}
