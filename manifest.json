{
  "manifest_version": 2,
  "name": "DemoMonkey",
  "description": "Tamper your application's UI to demo almost anything",
  "version": "2.2.2",
  "author": "Severin Neumann <severin.neumann@altmuehlnet.de>",
  "homepage_url": "https://github.com/Appdynamics/demomonkey/",
  "content_security_policy": "script-src 'self' https://apis.google.com https://cdn.appdynamics.com/; object-src 'self'",
  "icons": {
    "16": "icons/monkey_16.png",
    "48": "icons/monkey_48.png",
    "128": "icons/monkey_128.png"
  },
  "web_accessible_resources": [
    "manifest.json",
    "templates/*"
  ],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["js/monkey.js"],
    "all_frames": true,
    "run_at": "document_start"
  }],
  "background": {
    "page": "background.html"
  },
  "devtools_page": "devtools.html",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icons/monkey_16.png",
    "default_title": "DemoMonkey",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage", "unlimitedStorage", "tabs", "activeTab", "http://*/*", "https://*/*", "downloads", "contextMenus"
  ],
  "commands": {
    "toggle-hotkey-group-1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Toggle hotkey group 1"
    },
    "toggle-hotkey-group-2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Toggle hotkey group 2"
    },
    "toggle-hotkey-group-3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Toggle hotkey group 3"
    }
  }
}
